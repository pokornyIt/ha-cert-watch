{
    "cSpell.words": [
        "hass",
        "homeassistant",
        "pokorny"
    ],
    "cSpell.ignorePaths": [
        "vscode-extension",
        ".git/{info,lfs,logs,refs,objects}/**",
        ".git/{index,*refs,*HEAD}",
        "uv.lock",
        ".vscode/**",
        ".gitignore",
        ".pre-commit-config.yaml",
        "pyproject.toml"
    ],
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}
